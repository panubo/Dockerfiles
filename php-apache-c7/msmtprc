# MSMTP
account default

host {{ SMTP_PORT_25_TCP_ADDR | default('mail') }}
port {{ SMTP_PORT_25_TCP_PORT | default('25') }}

logfile /var/log/msmtp.log

{% if msmtp_from is defined -%}
from {{ msmtp_from }}
{% endif -%}

{% if msmtp_user and msmtp_pass is defined -%}
auth on
user {{ msmtp_user }}
password {{ msmtp_pass }}
{% endif -%}

tls on
tls_trust_file /etc/pki/tls/certs/ca-bundle.crt
