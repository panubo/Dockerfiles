upstream couchdb {
{{ range getenv "COUCHDB_SERVICE" | printf "/services/%s/*" | getvs }}
    server {{ . }};
{{ end }}
}

server {
  listen *:6984;

  server_name _;

  # SSL options
  ssl on;
  ssl_certificate /etc/nginx/conf.d/ssl/server.pem;
  ssl_certificate_key /etc/nginx/conf.d/ssl/server.pem;
  ssl_prefer_server_ciphers On;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_session_cache shared:SSL:1m;
  ssl_ciphers EECDH+ECDSA+AESGCM:EECDH+aRSA+AESGCM:EECDH+ECDSA+SHA384:EECDH+ECDSA+SHA256:EECDH+aRSA+SHA384:EECDH+aRSA+SHA256:EECDH:EDH+aRSA:!aNULL:!eNULL:!LOW:!3DES:!MD5:!EXP:!PSK:!SRP:!DSS:!RC4;

  # Set proxy headers
  proxy_set_header Host $host;
  proxy_set_header X-Forwarded-For $remote_addr;
  proxy_set_header X-Forwarded-Proto $scheme;

  # Client verification
  ssl_client_certificate /etc/nginx/conf.d/ssl/ca.pem;
  ssl_verify_client on;
  ssl_crl /etc/nginx/conf.d/ssl/crl.pem;
  
  # Extra variable to pass to couchdb
  #$ssl_client_s_dn
  #$ssl_client_cert
  #$ssl_client_cert_raw
  
  # CouchDB headers for Proxy Auth http://docs.couchdb.org/en/latest/api/server/authn.html#proxy-authentication
  # X-Auth-CouchDB-UserName
  # X-Auth-CouchDB-Roles
  # X-Auth-CouchDB-Token

  location / {
    proxy_pass http://couchdb;
    proxy_redirect off;
  }

  location ~ ^/(.*)/_changes {
    proxy_pass http://couchdb;
    proxy_redirect off;
    proxy_buffering off;
  }

}
